<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @user, local: true do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', id: 'edit-name' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', id: 'edit-email' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control', id: 'edit-password' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control', id: 'edit-confirmation' %>

      <%= f.submit "Save changes", class: 'btn btn-primary' %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">Change</a>
    </div>
  </div>
</div>